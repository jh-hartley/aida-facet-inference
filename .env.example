#############################
# API Configuration
#############################

API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

#############################
# CORS and Security
#############################

# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Comma-separated list of trusted hosts
TRUSTED_HOSTS=localhost,127.0.0.1

# Rate limiting to prevent abuse (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

#############################
# Logging
#############################

LOG_LEVEL=INFO

#############################
# LLM Configuration
#############################

# Set to either "openai" or "azure"
LLM_PROVIDER=azure

## OpenAI Settings (used if LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_TEMPERATURE=0.0
OPENAI_LLM_TOP_P=0.1
OPENAI_LLM_FREQ_PENALTY=0.0
OPENAI_LLM_REASONING_EFFORT=high

## Azure OpenAI Settings (used if LLM_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_ENDPOINT=https://your-azure-endpoint.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_EMBEDDING_API_VERSION=2023-05-15

#############################
# Embedding Configuration
#############################

EMBEDDING_MIN_DIMENSIONS=1536
EMBEDDING_MAX_DIMENSIONS=1536
EMBEDDING_DEFAULT_DIMENSIONS=1536

# Retry/backoff configuration
OPENAI_EMBEDDING_MAX_TRIES=10
OPENAI_EMBEDDING_MAX_TIME=120

#############################
# Database Configuration
#############################

DB_HOST=localhost
DB_PORT=5432
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_USE_SSL=False

# SQLAlchemy pool configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=2
DB_ASYNC_POOL_SIZE=20