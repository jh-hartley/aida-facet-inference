# OpenAI API Configuration (required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_TEMPERATURE=0.7
OPENAI_LLM_TOP_P=1.0
OPENAI_LLM_FREQ_PENALTY=0.0
OPENAI_LLM_REASONING_EFFORT=medium

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO

# Database Configuration (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aida_db
DB_USER=aida_user
DB_PASSWORD=your_secure_password_here
DB_USE_SSL=false

# Database Pool Configuration (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=2
DB_ASYNC_POOL_SIZE=20

# Embedding Configuration (optional)
EMBEDDING_MIN_DIMENSIONS=384
EMBEDDING_MAX_DIMENSIONS=4096
EMBEDDING_DEFAULT_DIMENSIONS=384